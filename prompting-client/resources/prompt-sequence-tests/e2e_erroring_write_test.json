{
  "version": 1,
  "prompt-filter": {
    "snap": "aa-prompting-test",
    "interface": "home",
    "constraints": {
      "path": "$BASE_PATH/.*"
    }
  },
  "prompts": [
    {
     "prompt-filter": {
       "snap": "aa-prompting-test",
       "interface": "home",
       "constraints": {
         "path": "$BASE_PATH/test-1.txt",
         "requested-permissions": [ "write" ],
         "available-permissions": [ "read", "write", "execute" ]
       }
     },
     "reply": {
       "action": "allow",
       "lifespan": "forever",
       "constraints": {
         "path-pattern": "/home/ubuntu/not-a-valid-path-for-this-prompt",
         "permissions": [ "read", "write" ]
       }
     }
    }
  ]
}
